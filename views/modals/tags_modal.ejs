<div class="absolute hidden w-full h-full bg-transparent" id="tags_modal">
    <div class="absolute bg-gray-600 h-32 w-32 p-2 "  id="tags_modal_content">
        <div class="divide-y h-full overflow-y-scroll">
            <% if(user_data.tags.length == 0){ %>
                no tags here
            <% }else{ %>
                <%for (let i = 0; i < user_data.tags.length; i++) { %>
                    <div id="<%= user_data.tags[i]._id %>" class="selected_tag  flex flex-row cursor-pointer p-2 overflow-hidden truncate" onmouseenter="this.style.backgroundColor = '<%= user_data.tags[i].color %>'" onmouseleave="this.style.backgroundColor = 'transparent'">
                        <div class="w-3 h-3 rounded-sm" style="background-color: <%= user_data.tags[i].color %>" > </div>
                        &nbsp;&nbsp;
                        <%= user_data.tags[i].name %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

